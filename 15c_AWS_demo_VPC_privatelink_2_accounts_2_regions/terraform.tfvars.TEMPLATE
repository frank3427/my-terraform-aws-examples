# acct1_pvd=PRIVATELINK PROVIDER, acct2_csm=PRIVATELINK CONSUMER

# New: Nov 26, 2024
# https://aws.amazon.com/about-aws/whats-new/2024/11/aws-privatelink-across-region-connectivity/
# https://aws.amazon.com/blogs/networking-and-content-delivery/introducing-cross-region-connectivity-for-aws-privatelink/

# ---- region and accounts
acct1_profile  = "account1_profile"
acct2_profile  = "account2_profile"
acct1_region   = "us-east-1"     
acct2_region   = "us-west-2"
acct1_azs      = [ "a", "b" ]
acct2_az       = "b"

# ---- CIDR network 
acct1_pvd_cidr_vpc             = "192.168.0.0/16"
acct1_pvd_cidr_subnets_public  = [ "192.168.0.0/24", "192.168.1.0/24" ]
acct1_pvd_cidr_subnets_private = [ "192.168.8.0/24", "192.168.9.0/24" ]
acct2_csm_cidr_vpc             = "10.10.0.0/16"
acct2_csm_cidr_subnet_public   = "10.10.0.0/24"

# ---- Authorized public IPs ingress
authorized_ips = [ "x.x.x.x/n", "y.y.y.y/m" ]

# ---- EC2 Instances for Web Servers in PROVIDER vpc (ssh keys are generated by Terraform)
acct1_pvd_websrv_inst_type            = "m6g.medium"
acct1_pvd_websrv_public_sshkey_path   = "sshkeys_generated/ssh_key_demo15c_acct1_pvd_websrv.pub"
acct1_pvd_websrv_private_sshkey_path  = "sshkeys_generated/ssh_key_demo15c_acct1_pvd_websrv"
acct1_pvd_websrv_cloud_init_script    = "cloud_init/acct1_pvd_cloud_init_websrv.sh"

# ---- EC2 Instance for Bastion in PROVIDER vpc (ssh keys are generated by Terraform)
acct1_pvd_bastion_inst_type           = "m6g.medium"
acct1_pvd_bastion_public_sshkey_path  = "sshkeys_generated/ssh_key_demo15c_acct1_pvd_bastion.pub"
acct1_pvd_bastion_private_sshkey_path = "sshkeys_generated/ssh_key_demo15c_acct1_pvd_bastion"
acct1_pvd_bastion_cloud_init_script   = "cloud_init/acct1_pvd_cloud_init_bastion.sh"

# ---- EC2 Instance for Bastion in CONSUMER VPC (ssh keys are generated by Terraform)
acct2_csm_bastion_inst_type           = "m6g.medium"
acct2_csm_bastion_public_sshkey_path  = "sshkeys_generated/ssh_key_demo15c_acct2_csm_bastion.pub"
acct2_csm_bastion_private_sshkey_path = "sshkeys_generated/ssh_key_demo15c_acct2_csm_bastion"
acct2_csm_bastion_cloud_init_script   = "cloud_init/acct2_csm_cloud_init_bastion.sh"